{
  "name": "elevate-training",
  "description": "Elevate your training experience and goals! Track your fitness and progressions over time. Analyse deeper your activities. And more...",
  "version": "7.0.0-4.alpha",
  "scripts": {
    "assert-app-exists": "node -e \"if ((require('fs').existsSync('./dist/app/')) === false) {console.log('Please run & wait for \\'npm start\\' task before.\\n\\n\\n\\n');process.exit(1);}\";",
    "build:metadata": "node -e \"require('fs').writeFileSync('build_metadata.json', JSON.stringify({commit: require('child_process').execSync('git rev-parse HEAD').toString().trim(), date: new Date().toISOString()}));\"",
    "build:appcore@dev": "npm run build:metadata && cd ../appcore/ && node ./node_modules/@angular/cli/bin/ng --version && node ./node_modules/@angular/cli/bin/ng build --outputPath=../desktop/dist/app/ --base-href --configuration=desktop",
    "build:appcore@prod": "npm run build:appcore@dev -- --base-href --configuration=desktop-prod",
    "build:updater@dev": "node ../node_modules/cpy-cli/cli.js ./src/updater/window/index.html ./dist/updater/ && rollup --config rollup-updater.config.js",
    "build:updater@prod": "npm run build:updater@dev -- --environment ELECTRON_ENV:prod",
    "build:electron@base": "rollup --config rollup-app.config.js",
    "build:electron@dev": "npm run build:updater@dev && npm run build:electron@base",
    "build:electron@prod": "npm run build:updater@prod && npm run build:electron@base -- --environment ELECTRON_ENV:prod",
    "build:prod": "npm-run-all clean build:electron@prod build:appcore@prod",
    "clean": "npm-run-all clean:*",
    "clean:dist": "node ../node_modules/del-cli/cli.js ./dist/",
    "clean:package": "node ../node_modules/del-cli/cli.js ./package/",
    "clean:metadata": "node ../node_modules/del-cli/cli.js ./build_metadata.json",
    "launch:dev:app": "npm run assert-app-exists && run-electron ./dist/desktop.bundle.js",
    "package:windows": "npm run build:prod && electron-builder build --windows --x64 --publish onTagOrDraft",
    "package:linux": "npm run build:prod && electron-builder build --linux --x64 --publish onTagOrDraft",
    "package:mac": "npm run build:prod && electron-builder build --mac --x64",
    "start:desktop": "npm run watch",
    "start": "npm run start:desktop",
    "test": "npm run build:metadata && jest --silent --coverage",
    "type:check": "tsc --noEmit --project tsconfig.json",
    "tslint": "node ./node_modules/tslint/bin/tslint -c ./tslint.json ./src/**/*.ts --fix",
    "watch": "npm run clean && node ../node_modules/cpy-cli/cli.js ./dev-app-update.yml ./dist && npm-run-all --print-label --race --parallel watch:electron watch:appcore",
    "watch:electron": "npm run build:electron@dev -- -- --watch",
    "watch:appcore": "npm run build:appcore@dev -- --watch",
    "upgrade:check": "ncu",
    "upgrade:apply": "npm run upgrade:check -- -u"
  },
  "config": {
    "unsafe-perm": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thomaschampagne/elevate"
  },
  "author": {
    "name": "Thomas Champagne",
    "email": "th.champagne@gmail.com",
    "web": "https://thomaschampagne.github.io"
  },
  "license": "MPL-2.0",
  "readme": "README.md",
  "engines": {
    "node": ">=14"
  },
  "engineStrict": true,
  "dependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@sports-alliance/sports-lib": "^5.4.13",
    "7zip-bin": "^5.0.3",
    "electron-log": "^4.2.4",
    "electron-updater": "^4.3.5",
    "https-proxy-agent": "^5.0.0",
    "ini": "^1.3.5",
    "lodash": "^4.17.20",
    "node-7z": "^2.1.2",
    "node-machine-id": "^1.1.12",
    "p-retry": "^4.2.0",
    "pako": "^1.0.11",
    "promise-tron": "^10.0.0",
    "querystring": "^0.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "tsyringe": "^4.3.0",
    "typed-rest-client": "^1.7.3",
    "vue": "^2.6.12",
    "xmldom": "^0.4.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.162",
    "@types/node": "^14",
    "@types/node-7z": "^2.1.0",
    "@types/pako": "^1.0.1",
    "@types/xmldom": "^0.1.30",
    "devtron": "^1.4.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "jest": "^26.6.1",
    "jest-config": "^26.6.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.32.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "run-electron": "^1.0.0",
    "ts-jest": "^26.4.3",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  },
  "build": {
    "appId": "com.elevate.app",
    "productName": "Elevate",
    "directories": {
      "output": "./package/"
    },
    "files": [
      "!**/*",
      "./dist/**/*.*",
      "./build/**/*.*",
      "./node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "thomaschampagne",
      "repo": "elevate",
      "vPrefixedTagName": false
    },
    "win": {
      "publisherName": "Thomas Champagne",
      "verifyUpdateCodeSignature": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "category": "Sports",
      "target": [
        "deb"
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "artifactName": "elevate_installer.${ext}"
    },
    "deb": {
      "maintainer": "Thomas Champagne",
      "category": "Sports",
      "artifactName": "elevate_installer.${ext}"
    }
  },
  "main": "./dist/desktop.bundle.js"
}
